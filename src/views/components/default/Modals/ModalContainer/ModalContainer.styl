.modal-container
    position fixed
    flexbox(column)
    justify(flex-start)
    top: 10%
    max-width 450px
    min-height: 500px
    max-height: 80%
    min-width: 310px
    width: 100%
    margin 0 auto
    radius(6px)
    background-color white

    .modal-header
        height 60px
        width 100%
        flexbox()
        align()
        justify(space-between)
        border-top-left-radius 6px
        border-top-right-radius 6px
        padding 0 20px
        background-image linear-gradient(257deg, $greenyBlue, $iris 40%, $cobalt)
        color white
        font-size 20px

        .close-modal
            position: absolute
            center()
            top: 14px
            right: 14px
            width 30px
            height 30px
            cursor pointer

            .icon
                center()
                font-size 24px
                color white

    .modal-content
        flex(column)
        overflow: auto
        width 100%
        padding: 20px
