.login-form
	height 100%
	width 100%
	flexbox(column)
	justify(space-between)
	align()
	padding 20px
	.input-group
		position relative
		width 100%
		height 75px
		margin-bottom 15px
		background white
		padding 5px 0
		border-radius 5px
		label
			position absolute
			width calc(100% - 20px)
			left 10px
			right 10px
			top 0
			font-size 16px
			color $second
			transition all .2s ease
		input
			height 35px
			position absolute
			display block
			width calc(100% - 20px)
			bottom 5px
			left 10px
			right 10px
			background-color transparent
			border-bottom 1px solid $second

	.login-button
		width 100%
		height 55px
		center()
		cursor pointer
		background-color $second
		border-radius 5px
		color white
		font-weight 700
		font-size 18px
