@import 'vendors/*'
@import 'common/*'

*
    outline: 0
    box-sizing: border-box

body
    font-family: 'ssp', Helvetica, Arial, sans-serif
    fs(16px)
    fw(400)
    line-height: 1.3
    color: rgba($darkNavy, .8)
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    text-rendering : optimizeLegibility

html, body, #app
    height: 100%
    width: 100%

#content
    min-height 80vh
    padding-top 50px

a
    text-decoration none

.hidden
    display: none

.container
    width: 100%
    margin-right: auto
    margin-left: auto
    padding-left: $containerPadding
    padding-right: $containerPadding

    @media (min-width: 576px)
        width: 540px

    @media (min-width: 768px)
        width: 720px

    @media (min-width: 992px)
        width: 970px

    @media (min-width: 1200px)
        width: 1140px

.theme
    &.theme-dark
        background-color $bodyDark
        color $txtDark
    &.theme-light
        background-color $bodyLight
        color $txtLight
