// Reset `button` and button-style `input` default styles
button
    background: none
    border: 0
    color: inherit
    /* cursor: default; */
    font: inherit
    line-height: normal
    overflow: visible
    padding: 0
    -webkit-appearance: button /* for input */
    -webkit-user-select: none /* for button */
    -moz-user-select: none
    -ms-user-select: none

button::-moz-focus-inner
    border: 0
    padding: 0
